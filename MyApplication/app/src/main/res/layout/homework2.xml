<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:awpp="http://schemas.android.com/tools">
    <Button
        android:id="@+id/buttontop"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/arrow"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/texOne"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/texOne"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Your Profil"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/buttontop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/texTwo"/>

    <TextView
        android:id="@+id/texTwo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="See more about your informations"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/texOne"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@+id/buttontop"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/profilpicture"
        android:background="@color/colorPrimaryDark"/>


    <TextView
        android:id="@+id/buttonTwo"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Follow"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/homework"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/texThree"
        />


    <TextView
        android:id="@+id/texThree"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="            80               99999999"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textFour"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="           Post            Followers"
        app:layout_constraintTop_toBottomOf="@+id/texThree"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
<ImageView
    android:id="@+id/imageone"
    android:layout_width="80dp"
    android:layout_height="150dp"
    android:layout_marginLeft="10dp"
    app:layout_constraintHorizontal_chainStyle="packed"
    app:layout_constraintTop_toBottomOf="@+id/textFour"
    app:layout_constraintLeft_toLeftOf="parent"
    android:background="@drawable/imageone"/>

    <ImageView
        android:id="@+id/imagetwo"
        android:layout_width="80dp"
        android:layout_height="150dp"
        android:background="@drawable/imagetwo"
      app:layout_constraintTop_toBottomOf="@+id/textFour"
        app:layout_constraintLeft_toRightOf="@+id/imageone"/>

    <ImageView
        android:id="@+id/imagethree"
        android:layout_width="80dp"
        android:layout_height="150dp"
        android:background="@drawable/imagethree"
        app:layout_constraintTop_toBottomOf="@+id/textFour"
        app:layout_constraintLeft_toRightOf="@+id/imagetwo"/>

    <ImageView
        android:id="@+id/imageforu"
        android:layout_width="80dp"
        android:layout_height="150dp"
        android:background="@drawable/imagefour"
        app:layout_constraintTop_toBottomOf="@+id/textFour"
        app:layout_constraintLeft_toRightOf="@+id/imagethree"/>

    <TextView
        android:id="@+id/texfive"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="+99"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/textFour"
        app:layout_constraintLeft_toRightOf="@+id/imageforu"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:text="Photos"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/texfive"
        app:layout_constraintLeft_toRightOf="@+id/imageforu"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/imageone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

    <ImageView
        android:id="@+id/logoone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:background="@drawable/logoone"
        app:layout_constraintTop_toBottomOf="@+id/middle"
        app:layout_constraintRight_toLeftOf="@+id/logotwo"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/logotwo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/logotwo"
        app:layout_constraintTop_toBottomOf="@+id/middle"
        app:layout_constraintRight_toLeftOf="@+id/logothree"
        app:layout_constraintLeft_toRightOf="@+id/logoone"/>

    <ImageView
        android:id="@+id/logothree"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/logothree"
        app:layout_constraintTop_toBottomOf="@+id/middle"
        app:layout_constraintRight_toLeftOf="@+id/logofour"
        app:layout_constraintLeft_toRightOf="@+id/logotwo"/>

    <ImageView
        android:id="@+id/logofour"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/logofour"
        app:layout_constraintTop_toBottomOf="@+id/middle"
        app:layout_constraintRight_toLeftOf="@+id/logofive"
        app:layout_constraintLeft_toRightOf="@+id/logothree"/>

    <ImageView
        android:id="@+id/logofive"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/logofive"
        app:layout_constraintTop_toBottomOf="@+id/middle"
        app:layout_constraintLeft_toRightOf="@+id/logofour"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/middletwo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/logofive"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/middlebottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/middletwo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/colorPrimaryDark"/>
    
    <TextView
        android:id="@+id/texo"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/middlebottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/texi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/texo"
        android:text="About"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="23dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/texii"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:text="Information of Sat Pei Soe blah blah blah blah blah..."
        app:layout_constraintTop_toBottomOf="@+id/texi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/texiii"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:text="blah blah blah blah blah blah blah blah blah........."
        app:layout_constraintTop_toBottomOf="@+id/texii"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/texiv"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:text="blah blah blah blah blah blah blah blah blah........."
        app:layout_constraintTop_toBottomOf="@+id/texiii"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/texv"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:text="blah blah blah blah blah blah blah blah blah........."
        app:layout_constraintTop_toBottomOf="@+id/texiv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/buttontop"
        android:src="@drawable/arrowv"
        />


</androidx.constraintlayout.widget.ConstraintLayout>